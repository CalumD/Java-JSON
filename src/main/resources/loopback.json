{
  "$schema": "https://blah.ac.uk/CS4099/SystemSpecification.schema.json",
  "system": {
    "name": "Loopback Self Tester",
    "description": "Attempts to create a loopback Chat App to ensure the Framework is OK",
    "rolesDirectory": "/",
    "roles": [
      {
        "name": "Chat Server",
        "id": "cs",
        "path": "__ChatServer__"
      },
      {
        "name": "Chat Client",
        "id": "cc",
        "path": "__ChatClient__"
      }
    ],
    "machines": [
      {
        "name": "Chat App Tester",
        "address": "localhost",
        "components": [
          {
            "role": "cs"
          },
          {
            "role": "cc",
            "custom": {
              "componentID": "Chat Server",
              "serverHostname": "localhost"
            }
          }
        ]
      }
    ]
  }
}

